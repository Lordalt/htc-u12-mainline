# 0 "arch/arm64/boot/dts/ti/k3-am62x-sk-hdmi-audio.dtso"
# 0 "<built-in>"
# 0 "<command-line>"
# 1 "arch/arm64/boot/dts/ti/k3-am62x-sk-hdmi-audio.dtso"
# 12 "arch/arm64/boot/dts/ti/k3-am62x-sk-hdmi-audio.dtso"
/dts-v1/;
/plugin/;

&{/} {
 hdmi_audio: sound-sii9022 {
  compatible = "simple-audio-card";
  simple-audio-card,name = "AM62x-Sil9022-HDMI";
  simple-audio-card,format = "i2s";
  simple-audio-card,bitclock-master = <&hdmi_dailink_master>;
  simple-audio-card,frame-master = <&hdmi_dailink_master>;

  hdmi_dailink_master: simple-audio-card,cpu {
   sound-dai = <&mcasp1>;
   system-clock-direction-out;
  };

  simple-audio-card,codec {
   sound-dai = <&sii9022>;
  };
 };
};

&mcasp1 {
 auxclk-fs-ratio = <2177>;
};

&codec_audio {
 status = "disabled";
};
